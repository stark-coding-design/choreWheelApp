<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/constraint_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/chore_wheel_background_v2"
    tools:context=".MainActivity">

    <ImageView
        android:id="@+id/spinningWheel"
        android:layout_width="350dp"
        android:layout_height="350dp"
        android:layout_marginStart="12dp"
        android:layout_marginEnd="12dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/chore_wheelv2" />

    <ImageView
        android:id="@+id/ticker"
        android:layout_width="52dp"
        android:layout_height="43dp"
        android:layout_marginBottom="-14dp"
        app:layout_constraintBottom_toTopOf="@+id/spinningWheel"
        app:layout_constraintEnd_toEndOf="@+id/spinningWheel"
        app:layout_constraintHorizontal_bias="0.545"
        app:layout_constraintStart_toStartOf="@+id/spinningWheel"
        app:layout_constraintTop_toTopOf="@+id/spinningWheel"
        app:layout_constraintVertical_bias="1.0"
        app:srcCompat="@drawable/chore_wheel_ticker" />

</androidx.constraintlayout.widget.ConstraintLayout>